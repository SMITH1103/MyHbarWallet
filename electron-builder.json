{
    "appId": "MHW-test",
    "productName": "MyHbarWallet",
    "directories":{
        "app": ".",
        "out": "dist/electron",
        "buildResources": "build-res"
    },

    "files": [
        "package.json",
        "electron/**/*",
        "dist/**/*",
        "node_modules",
        "index.html"
    ],

    "dmg": {
        "background": null,
        "backgroundColor": "#ffffff",
        "window": {
            "minWidth": 800,
            "minHeight": 600
        },
        "contents": [
            {
                "x": 100,
                "y": 100
            },
            {
                "x": 300,
                "y": 100,
                "type": "link",
                "path": "/Applications"
            }
        ]
    },

    "mac": {
        "target": "dmg",
        "category": "public.app-category.utilities"
    },

    "win": {
        "target": "nsis"
    }
}